page {
  height: 100%;
  position: relative;
}

.container-index {
  height: 100%;
  font-family: Arial, "Microsoft YaHei";
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.background {
  width: 100%;
  height: 100%;
  background-size: cover;
  position: absolute;
  top: 0;
  z-index: -1;
}

.avatar {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}

.username {
  font-size: 30rpx;
}

.start-index,.description {
  width: 70%;
  margin-top: 200rpx;
  font-size: 40rpx;
  text-align: center;
  height: 50px;
  line-height: 50px;
  border: 1px solid #d6d4d6;
  border-radius: 5px;
  box-shadow: 5px 2px 20px 0 rgba(46, 61, 73, 0.5);
  letter-spacing: 15rpx;
}
.description{
  margin-top: 20rpx;
}
